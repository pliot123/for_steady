코드

#include <iostream>
#include <queue>
#include <string>
using namespace std;
vector<int> top[5];


void spin(int number,int dir) {//시계 돌리는 것 완료
vector<int> temp;
temp=top[number];
top[number].clear();

if (dir == -1) {//반시계
for (int i = 1; i <= 7; i++) {
top[number].push_back(temp[i]);
}
top[number].push_back(temp[0]);
}
else {//시계
top[number].push_back(temp[7]);
for (int i = 0; i <= 6; i++) {
top[number].push_back(temp[i]);
}
}
}



void rotation(int number, int dir) {
if (number == 1) {
if (top[1][2] == top[2][6]) {//1이랑 2랑 인접한 극이 같으면
spin(1, dir);// 톱니 1 만 방향대로 돌려주고
}
else {//만약 극이 달랐어
//그럼 2번에서 3번 체크하는 겨
if (top[2][2] == top[3][6]) {//2번이 3번이랑 인접한 극이 같으면
//1,2 돌아야 겠죠?
spin(1, dir);
spin(2, dir * -1);//역수를 곱해주면 역방향으로 돈다
}
else {//2번이랑 3번이랑 극이 또 달랐어
//그럼 3번이랑 4번 비교 해야겠징?
if (top[3][2] == top[4][6]) {//3번이랑 4번이랑 인접한 극이 같으면
//1,2,3돌고 다르면 1,2,3,4  다 돌린다.
spin(1, dir);
spin(2, dir * -1);
spin(3, dir);
}
else {
spin(1, dir);
spin(2, dir * -1);
spin(3, dir);
spin(4, dir * -1);
}
}
}
}

if (number == 2) {
if (top[1][2] != top[2][6]) {//일단 2번 1번이랑 다르면 돌려주고 시작하자.
spin(1, dir*-1);
}

if (top[2][2] == top[3][6]) {//2번이 3번이랑 인접한 극이 같으면
spin(2, dir);//역수를 곱해주면 역방향으로 돈다
}
else {
if (top[3][2] == top[4][6]) {
spin(2, dir);
spin(3, dir * -1);
}
else {
spin(2, dir);
spin(3, dir * -1);
spin(4, dir);
}
}
}
if (number == 3) {
if (top[3][2] != top[4][6]) {
spin(4, dir * -1);
}

if (top[3][6] == top[2][2]) {
spin(3, dir);
}
else {
if (top[2][6] == top[1][2]) {
spin(3, dir);
spin(2, dir * -1);
}
else {
spin(3, dir);
spin(2, dir * -1);
spin(1, dir);
}
}
}

if (number == 4) {
if (top[4][6] == top[3][2]) {
spin(4, dir);
}
else {
if (top[3][6] == top[2][2]) {
spin(4, dir);
spin(3, dir * -1);
}
else {
if (top[2][6] == top[1][2]) {
spin(4, dir);
spin(3, dir * -1);
spin(2, dir);
}
else {
spin(4, dir);
spin(3, dir * -1);
spin(2, dir);
spin(1, dir * -1);
}
}
}
}

}


int main() {
int n;
int ret = 0; 
for (int i = 1; i <= 4; i++) {
string temp;
cin >> temp;
for (int j = 0; j < 8; j++) {
int input = temp[j] - '0';
top[i].push_back(input);
}
}

cin >> n; 
for (int i = 0; i < n; i++) {
int number, dir;
cin >> number >>  dir;
rotation(number, dir);
}
if (top[1][0] == 1) {
ret += 1;
}
if (top[2][0] == 1) {
ret += 2;
}
if (top[3][0] == 1) {
ret += 4;
}
if (top[4][0] == 1) {
ret += 8;
}

cout << ret << '\n';

return 0;
}

